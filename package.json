{
    "name": "typescript-express-boilerplate",
    "version": "1.0.0",
    "description": "Production-ready TypeScript + Express boilerplate with Prisma, JWT auth, ESLint, Swagger",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev --name init",
        "swagger": "node dist/utils/swagger.js"
    },
    "dependencies": {
        "@prisma/client": "^6.16.3",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.18.2",
        "helmet": "^6.0.0",
        "joi": "^17.9.2",
        "jsonwebtoken": "^9.0.0",
        "morgan": "^1.10.0",
        "prisma": "^5.0.0",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/morgan": "^1.9.10",
        "@types/node": "^20.5.1",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.27.5",
        "prettier": "^3.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.2"
    }
}
