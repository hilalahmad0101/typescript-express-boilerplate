# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=5000
NODE_ENV=development
API_VERSION=v1

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/myappdb?schema=public"

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Generate strong secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=replace_this_with_a_strong_secret_key_minimum_32_characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=replace_this_with_another_strong_secret_key_for_refresh
JWT_REFRESH_EXPIRES_IN=7d
